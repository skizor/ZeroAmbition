<div class="container-fluid" style="margin-top:-20px;">
        <div class="row">

            <div class="col-md-3">
                <% if user_signed_in? %>
                hello

                <% else %>
                <%= form_for(:user, :url => session_path(:user)) do |f| %>
                <%= f.text_field :email %>
                <%= f.password_field :password %><br>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %><br>
                <%= f.submit 'Sign in' %>
                <p>
                <%= link_to "Forgot your password?", new_password_path(:user) %>
              </p>
                <% end %>
                <% end %>
            </div>

            <div class="col-md-9">
            </div>

        </div>
    </div>


    <header>
      <ul>
        <i class='fa fa-shopping-cart'>
          <span class='counter'></span>
        </i>
      </ul>
    </header>
    <div class="container">
      <div class='row'>
        <% @products.each do |product| %>
        <div class="col-sm-3">
          <div class='<%= cycle('product--red', 'product--yellow')%>'>
            <div class='product_inner'>
              <%= image_tag(product.image, width: '150') %>
              <h4 style="color: black"><%= product.title %></h4>
              <p>Price £<%= product.price %></p>
              <button class="btn" type="button" data-toggle="modal" data-target="#myModal<%= product.id %>">Подробнее</button>
                <div id="myModal<%= product.id %>" class="modal fade">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header"><button class="close" type="button" data-dismiss="modal">×</button>
                        <h4 class="modal-title"><%= product.title %></h4>
                      </div>
                      <div class="modal-body"> <%= product.title %>

                      </div>
                      <div class="modal-footer"><button class="btn btn-default" type="button" data-dismiss="modal">Закрыть</button></div>
                    </div>
                  </div>
                </div>
                <% if user_signed_in? %>
                <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
                <% end %>
            </div>
            <div class='product_overlay'>
              <h2>Added to basket</h2>
              <i class='fa fa-check'></i>
            </div>
          </div>
      </div>
    <% end %>
      </div>
    </div>
